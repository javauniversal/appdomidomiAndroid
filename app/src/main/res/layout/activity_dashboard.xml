<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textura"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/pizza"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/costo">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/txtProductPrice"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="$28.000"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </LinearLayout>

                </FrameLayout>
                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="PIZZA DE PEPERONI"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorPrimary">


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="#FFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="26sp"
                        android:text="@string/pizza_quantity"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="La cantidad de pizzas se maneja por unidad, no por porciones"
                        android:textColor="@color/gray_text"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="#fff">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnRemoveQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_remove_white_24dp"
                        android:layout_margin="15dp"
                        app:backgroundTint="@color/colorPrimary"
                        android:scaleType="center"
                        app:elevation="6dp"
                        app:fabSize="normal"
                        android:clickable="true"
                        app:pressedTranslationZ="12dp"
                        app:rippleColor="@color/colorPrimary"
                        tools:ignore="RtlHardcoded" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="33sp"
                        android:layout_margin="20dp"
                        android:text="1"
                        android:id="@+id/txtProductQty"
                        android:layout_height="wrap_content" />
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnAddQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_white_24dp"
                        android:layout_margin="15dp"
                        app:backgroundTint="@color/colorPrimary"
                        android:scaleType="center"
                        app:elevation="6dp"
                        app:fabSize="normal"
                        android:clickable="true"
                        app:pressedTranslationZ="12dp"
                        app:rippleColor="@color/colorPrimary"
                        tools:ignore="RtlHardcoded" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:background="#fff">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:textSize="26sp"
                        android:lines="2"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="center"
                        android:text="Recibe tu pizza en 19:00 Min."
                        android:textColor="@color/colorPrimary"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="13dp"
                    android:background="#fff">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:id="@+id/layout_order"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/shape_button_get">

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="23sp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="Pide tu pizza"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_button_edit">
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="23sp"
                            android:layout_margin="10dp"
                            android:text="Editar tus datos"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
