<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text="Â¡BIENVENIDO!"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text="CREA TU CUENTA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="30dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNames"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Nombre completo"/>
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/txtLastName"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Apellidos"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutAddressType"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/geo"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:hint="Calle"
                        android:id="@+id/etAddressType"
                        android:focusable="false"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.15"
                        android:layout_gravity="bottom"
                        android:id="@+id/addressField1"
                        android:inputType="number"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.11"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="24sp"
                            android:textColor="#000"
                            android:gravity="center"
                            android:layout_gravity="bottom"
                            android:layout_height="match_parent"
                            android:text="#"/>
                    </LinearLayout>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.15"
                        android:inputType="number"
                        android:id="@+id/addressField2"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="24sp"
                            android:textColor="#000"
                            android:gravity="center"
                            android:layout_gravity="bottom"
                            android:layout_height="match_parent"
                            android:text="-"/>
                    </LinearLayout>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.15"
                        android:id="@+id/addressField3"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Celular"
                    android:id="@+id/txtPhone"
                    android:inputType="number"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:alpha="0.3"
            android:src="@drawable/pizza_trans"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/layoutCreateAccount"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape_button_get">

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="23sp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Ordenar"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
